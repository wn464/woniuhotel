<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.dao.IOrderDao">
<!-- 	添加订单 (除支付号、押金)-->
	<insert id="insertOrder" parameterType="OrderBean">
		insert into orders(orderTime,orderNumber,status,price,memberId,subscribeStatus)
		values(#{orderTime},#{orderNumber},#{status.id},#{price},#{memberId},#{subcribeStatus.id})
	</insert>
<!-- 	通过状态分页查询订单 -->
	<select id="selectOrderByState" resultMap="map">
		select * from orders
<!-- 		<where> -->
<!-- 		status = #{status}  -->
<!-- 			<if test="memberId!=0"> -->
<!-- 				and memberId = #{mid} -->
<!-- 			</if> -->
<!-- 		limit #{page},#{size}	 -->
<!-- 		</where> -->
		
	</select>
<!-- 	通过入住信息查询订单 -->
	<select id="selectOrderByAttr" parameterType="LiveBean" resultMap="map">
		select * from orders where id = #{orderid} 
	</select>
<!-- 	修改订单状态 -->
	<update id="updateOrderState" parameterType="int">
		update orders set status = #{status} where id = #{oid}
	</update>
<!-- 	查询数量 -->
	<select id="selectNumberByState" resultType="int">
		select count(*) from order
		<where>
			<if test="status==5">
				and status==5
			</if>
			<if test="status==6">
				and status==6
			</if>
			<if test="status==7">
				and status==7
			</if>
			<if test="status==10">
				and status==10
			</if>
			<if test="status==8">
				and status==8
			</if>
		</where>
	</select>
	
	<resultMap id="map" type="OrderBean">
		<id property="id" column="id"></id>
		<result property="orderTime" column="orderTime"></result>
		<result property="orderNumber" column="orderNumber"></result>
		<result property="alipayNumber" column="alipayNumber"></result>
		<result property="price" column="price"></result>
		<result property="payMoney" column="payMoney"></result>
		<association property="member" javaType="MemberBean" select="com.project.dao.IMemberDao.selectById" column="memberId"/>
		<association property="status" javaType="MarkBean" select="com.project.dao.IMarkDao.selectmarkbyid" column="status"/>
	    <association property="subscribeStatus" javaType="MarkBean" select="com.project.dao.IMarkDao.selectmarkbyid" column="subscribeStatus"/> 
		
<!-- 		<association property="comment" javaType="CommentBean" select="com.project.dao.ICommentDao.selectCommentByOid" column="id"/> -->
<!-- 		<collection  property="lives" ofType="LiveBean" select="com.project.dao.ILiveDao.selectLiveByOid" column="id"/> -->
	</resultMap>
	
</mapper>